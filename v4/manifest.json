{
  "manifest_version": 3,
  "name": "Pigeon v4",
  "version": "1.0",
  "action": {
    "default_popup": "login_screen.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "images": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
